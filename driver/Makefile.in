@DRIVER_NAME@-y += main.o dynamic_params_table.o fillers_table.o flags_table.o ppm_events.o ppm_fillers.o event_table.o syscall_table64.o ppm_cputime.o ppm_tp.o socketcall_to_syscall.o syscall_ia32_64_map.o
obj-m += @DRIVER_NAME@.o
ccflags-y := @KBUILD_FLAGS@

KERNELDIR 		?= /lib/modules/$(shell uname -r)/build

TOP := $(shell pwd)
all:
	$(MAKE) -C $(KERNELDIR) M=$(TOP) modules

clean:
	$(MAKE) -C $(KERNELDIR) M=$(TOP) clean

install: all
	$(MAKE) -C $(KERNELDIR) M=$(TOP) modules_install
